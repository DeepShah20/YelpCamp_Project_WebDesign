<% include ../partials/header %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
        <h1>Welcome to YelpCamp!</h1>
        <p>View our hand-picked campground from all over the world.</p>
        <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campground</a>
        <form action="/campgrounds" method="GET" class="form-inline">
            <div class="from-group space">
               <input type="text" placeholder="Campground Search" name="search" class="form-control">
               <input type="submit" value="search" class="btn btn-dark"> 
            </div>
        </form>
        </div>
    </header>

    <div class="row text-center">
        <div class="col-md-12">
            <% if(noMatch !== undefined) { %>
            <h3><%= noMatch %></h3>
            <% } %> 
        </div>
        
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-4 col-sm-6 mb-4">
               <div class="card">
                 <img class="card-img-top" src="<%= campground.image %>" alt="%= campground.name %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= campground.name %></h5>
                           <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                  </div>
                </div> 
            </div>
        <% }); %>
            
    </div>
</div>


<% include ../partials/footer %>